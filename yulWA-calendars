#!/bin/bash
# Bash script that archives selected York University web sites using the WARC ISO format.
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DATE=`date +"%Y_%m_%d"`

cd /mnt/diy/DIY/web-archiving/warc
mkdir YU_Calendars_$DATE
cd YU_Calendars_$DATE

xvfb-run -a -s "-screen 0 1280x1024x24" wkhtmltopdf --use-xserver --dpi 200  --page-size Letter http://calendars.registrar.yorku.ca YU_Calendars_$DATE.pdf
xvfb-run -a -s "-screen 0 1280x1024x24" wkhtmltoimage --use-xserver http://calendars.registrar.yorku.ca temp.png
pngcrush temp.png YU_Calendars_$DATE.png
rm temp.png
/usr/local/bin/wget --page-requisites --warc-file=YU_Calendars_$DATE --wait=3 http://calendars.registrar.yorku.ca
cp YU_Calendars_$DATE.warc.gz /mnt/diy/DIY/web-archiving/wayback
cd ..
/usr/bin/python /usr/local/bin/bagit.py --processes 4 --contact-name 'Nick Ruest' --contact-email 'ruestn@yorku.ca' --source-organization 'York University' --organization-address '4700 Keele Street Toronto, Ontario M3J 1P3 Canada' --contact-phone '+1 (416)736-2100 x 33235' --external-description 'York University Calendars (Office of the Registrar) web archive' YU_Calendars_$DATE
zip -r YU_Calendars_$DATE.zip YU_Calendars_$DATE
rm -rf YU_Calendars_$DATE
echo "S'up Dawg? I archived yo calendar site: $(date)" >> /var/log/webarchiving.log
